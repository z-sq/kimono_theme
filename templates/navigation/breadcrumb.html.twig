{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {# 面包屑主模板 #}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    {# 仅屏幕阅读器可见的标题 #}
    <h2 id="system-breadcrumb" class="sr-only" style="display: none">{{ 'Breadcrumb'|t }}</h2>
    {# 面包屑列表 #}
    <ol class="BreadcrumbList contents_wrp" itemscope itemtype="https://schema.org/BreadcrumbList">
    {% for item in breadcrumb %}
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        {% if item.url %}
        <a href="{{ item.url }}" itemprop="item">{{ item.text }}</a>
        {% else %}
        <span aria-current="page">{{ item.text }}</span>
        {% endif %}
        <meta itemprop="name" content="{{ item.text }}" />
        <meta itemprop="position" content="{{ loop.index }}" />
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
